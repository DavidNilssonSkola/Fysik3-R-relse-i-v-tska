#Moduler

import math
import numpy as np

#Värden

Vinkeln1 = 1
Vinkeln2 = 0
Massa = 0.04593
Position1 = 0
Position2 = 0
Px = 0
Py = 0
Hastighet1 = 5
Hastighet2 = 5
Hx1 = Hastighet1*math.cos(Vinkeln1)
Hx2 = 0
Hy1 = Hastighet1*math.sin(Vinkeln1) 
Hy2 = 0
VinkelHastighet1 = 0
VinkelHastighet2 = 0
Acceleration = 0
AccelerationY = 0
AccelerationX = 0
Densitet = 1.225
Diametern = 0.04267
Radie = Diametern/2
Delta_t = 0.1
Area = 4*math.pi*Radie*Radie
Fg = Massa*9.82
Fd = 0
Fm = 0
Cd = 0.5
kd = 0.5*Cd*Densitet*Area
n = 0
Statiska_trycket = 0

#Funktioner

while(True):
    n += 1
    Dynamiskt_tryck = Densitet*(Hastighet1*Hastighet1)*0.5 + Statiska_trycket
    Fd = kd*(Hastighet1*Hastighet1)  
   
    KraftY = Fg*math.sin(Vinkeln1)+Fd*math.sin(Vinkeln1)+Fm*math.sin(Vinkeln1)
    KraftX = Fd*math.cos(Vinkeln1)
    
    AccelerationY = KraftY/Massa
    AccelerationX = KraftX/Massa
    Hy2 = Hy1 + AccelerationY*Delta_t 
    Hx2 = Hx1 + AccelerationX*Delta_t
    Acceleration = math.sqrt(AccelerationY*AccelerationY + AccelerationX*AccelerationX)
    Hastighet2 = math.sqrt(Hx2*Hx2 + Hy2*Hy2)
    VinkelHastighet2 = VinkelHastighet1 + Hastighet1*(1/Radie)
    Position2 = Position1 + Hastighet2*Delta_t
    Px = Position2*np.cos(Vinkeln1)
    Py = Position2*np.sin(Vinkeln1)
    print(Py)
    Vinkeln2 = np.arctan((Hx2/(Hy2)))
    
# Förberedelser

    Fm = 2*Densitet*VinkelHastighet1*(Hastighet2-Hastighet1)*math.pi*Radie*Radie*Radie
    
    Hastighet1 = Hastighet2
    Position1 = Position2
    Vinkeln1 = Vinkeln2
    Hx1 = Hx2
    Hy1 = Hy2
    VinkelHastighet1 = VinkelHastighet2
    if(n == 250):
        break
